<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/detailFragment"
        android:name="edu.sjsu.android.project3jasminelao.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="@string/argument_key"
            app:argType="edu.sjsu.android.project3jasminelao.Anime" />
    </fragment>
    <fragment
        android:id="@+id/listFragment"
        android:name="edu.sjsu.android.project3jasminelao.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/list_to_detail"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/infoFragment"
        android:name="edu.sjsu.android.project3jasminelao.InfoFragment"
        android:label="fragment_info"
        tools:layout="@layout/fragment_info" />
    <action
        android:id="@+id/goto_info"
        app:destination="@id/infoFragment" />
</navigation>